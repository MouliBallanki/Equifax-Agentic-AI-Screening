# ============================================
# AI Provider Configuration
# ============================================

# GCP Vertex AI with Gemini 2.0 Flash (REQUIRED for AI agents)
# After running 'gcloud auth login', only GCP_PROJECT_ID is needed
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Optional: Service Account (only needed for production/CI/CD)
# GCP_SERVICE_ACCOUNT_JSON=path/to/service-account-key.json
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Note: For local development, run 'gcloud auth login' to authenticate
# The system will automatically use Application Default Credentials

# Database (MySQL)
DATABASE_URL=mysql://root:your_password@localhost:3306/equifax_screening

# Application Settings
APP_NAME=Equifax AI MCP Screening
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# MCP Server Settings
MCP_HOST=0.0.0.0
MCP_PORT=5000

# API Gateway
API_HOST=0.0.0.0
API_PORT=8000

# Gemini Model Settings
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=8000
GEMINI_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=30

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
